<p id="notice"><%= notice %></p>

<h1>Listing Ads</h1>

<table>
  <thead>
    <tr>
      <th>Adcategory</th>
      <th>Adtype</th>
      <th>Adtitle</th>
      <th>Addescription</th>
      <th>Adprice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.adcategory %></td>
        <td><%= ad.adtype %></td>
        <td><%= ad.adtitle %></td>
        <td><%= ad.addescription %></td>
        <td><%= ad.adprice %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

